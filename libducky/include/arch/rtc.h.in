  RTC_MMIO_HOUR   = ${X8(ducky.devices.rtc.RTCPorts.HOUR)},
  RTC_MMIO_DAY    = ${X8(ducky.devices.rtc.RTCPorts.DAY)},
  RTC_MMIO_MONTH  = ${X8(ducky.devices.rtc.RTCPorts.MONTH)},
  RTC_MMIO_YEAR   = ${X8(ducky.devices.rtc.RTCPorts.YEAR)}
};

#include <hdt.h>

typedef struct {
  hdt_entry_device_t e_header;
  u32_t              e_mmio_address;
} hdt_entry_device_rtc_t;

#endif
